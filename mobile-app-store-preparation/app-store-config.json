{
  "ios": {
    "bundleIdentifier": "com.jobboard.platform",
    "version": "1.0.0",
    "buildNumber": "1",
    "appName": "JobBoard Pro",
    "displayName": "JobBoard Pro",
    "minimumOsVersion": "13.0",
    "supportedDevices": ["iPhone", "iPad"],
    "orientation": "portrait",
    "supportsTablet": true,
    "requireFullScreen": false,
    "statusBarStyle": "default",
    "backgroundColor": "#ffffff",
    "splash": {
      "image": "./assets/splash-ios.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "icon": "./assets/icon-ios.png",
    "associatedDomains": ["applinks:jobboard-platform.vercel.app"],
    "privacyManifests": {
      "NSUserTrackingUsageDescription": "This app uses tracking to provide personalized job recommendations and improve your experience.",
      "NSLocationWhenInUseUsageDescription": "Location access helps us show relevant local job opportunities.",
      "NSPhotoLibraryUsageDescription": "Photo library access allows you to upload profile pictures and documents.",
      "NSCameraUsageDescription": "Camera access allows you to take photos for your profile and documents.",
      "NSMicrophoneUsageDescription": "Microphone access is used for video interviews and voice messages.",
      "NSContactsUsageDescription": "Contact access helps you invite connections to the platform.",
      "NSCalendarsUsageDescription": "Calendar access helps schedule interviews and important dates.",
      "NSNotificationsUsageDescription": "Notifications keep you updated on new job opportunities and messages."
    },
    "infoPlist": {
      "UIBackgroundModes": ["background-processing", "background-fetch"],
      "ITSAppUsesNonExemptEncryption": false,
      "NSAppTransportSecurity": {
        "NSExceptionDomains": {
          "jobboard-platform.vercel.app": {
            "NSExceptionAllowsInsecureHTTPLoads": false,
            "NSExceptionMinimumTLSVersion": "TLSv1.2"
          }
        }
      }
    },
    "config": {
      "usesNonExemptEncryption": false,
      "googleSignIn": {
        "reservedClientId": "com.googleusercontent.apps.YOUR_REVERSED_CLIENT_ID"
      }
    },
    "entitlements": {
      "com.apple.developer.applesignin": ["Default"],
      "com.apple.developer.associated-domains": ["applinks:jobboard-platform.vercel.app"]
    }
  },
  "android": {
    "package": "com.jobboard.platform",
    "versionCode": 1,
    "versionName": "1.0.0",
    "compileSdkVersion": 34,
    "targetSdkVersion": 34,
    "minSdkVersion": 21,
    "applicationId": "com.jobboard.platform",
    "appName": "JobBoard Pro",
    "icon": "./assets/icon-android.png",
    "splash": {
      "image": "./assets/splash-android.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "adaptiveIcon": {
      "foregroundImage": "./assets/adaptive-icon-foreground.png",
      "backgroundImage": "./assets/adaptive-icon-background.png"
    },
    "playStoreUrl": "https://play.google.com/store/apps/details?id=com.jobboard.platform",
    "permissions": [
      "android.permission.INTERNET",
      "android.permission.ACCESS_NETWORK_STATE",
      "android.permission.ACCESS_WIFI_STATE",
      "android.permission.READ_EXTERNAL_STORAGE",
      "android.permission.WRITE_EXTERNAL_STORAGE",
      "android.permission.CAMERA",
      "android.permission.RECORD_AUDIO",
      "android.permission.ACCESS_FINE_LOCATION",
      "android.permission.ACCESS_COARSE_LOCATION",
      "android.permission.VIBRATE",
      "android.permission.RECEIVE_BOOT_COMPLETED",
      "android.permission.WAKE_LOCK",
      "com.google.android.c2dm.permission.RECEIVE"
    ],
    "intentFilters": [
      {
        "action": "android.intent.action.VIEW",
        "category": ["android.intent.category.DEFAULT", "android.intent.category.BROWSABLE"],
        "data": {
          "scheme": "https",
          "host": "jobboard-platform.vercel.app"
        }
      }
    ],
    "config": {
      "googleSignIn": {
        "apiKey": "YOUR_ANDROID_API_KEY"
      },
      "firebase": {
        "apiKey": "YOUR_FIREBASE_API_KEY",
        "authDomain": "jobboard-platform.firebaseapp.com",
        "projectId": "jobboard-platform",
        "storageBucket": "jobboard-platform.appspot.com",
        "messagingSenderId": "YOUR_SENDER_ID",
        "appId": "YOUR_FIREBASE_APP_ID"
      }
    }
  },
  "expo": {
    "name": "JobBoard Pro",
    "slug": "jobboard-platform",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "scheme": "jobboard-platform",
    "platforms": ["ios", "android"],
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-image-picker",
      "expo-notifications",
      "expo-location",
      "expo-camera",
      "expo-contacts",
      "expo-calendar",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you upload profile pictures and documents.",
          "cameraPermission": "The app accesses your camera to let you take photos for your profile and documents."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow JobBoard Pro to use your location to show relevant local job opportunities."
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.YOUR_REVERSED_CLIENT_ID"
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      },
      "apiUrl": "https://jobboard-platform.vercel.app",
      "supabaseUrl": "https://rzwumwbmjvbkaedrgmbo.supabase.co",
      "supabaseAnonKey": "YOUR_SUPABASE_ANON_KEY"
    },
    "owner": "jobboard-platform",
    "privacy": "public",
    "sdkVersion": "50.0.0",
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/YOUR_EAS_PROJECT_ID"
    }
  }
}