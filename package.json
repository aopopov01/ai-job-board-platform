{
  "name": "job-board-platform",
  "version": "1.0.0",
  "description": "AI-powered job board platform with intelligent matching",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:mobile\"",
    "build": "next build",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && npm run build",
    "start": "next start",
    "test": "turbo run test",
    "test:unit": "npm run test --workspace=@job-board/web",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "npm run test:coverage --workspace=@job-board/web",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "db:generate": "cd packages/database && npm run generate",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:seed": "cd packages/database && npm run seed",
    "deploy:web": "cd apps/web && npm run deploy",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/supabase-js": "^2.45.0",
    "@tanstack/react-query": "^5.51.1",
    "autoprefixer": "^8.4.39",
    "lucide-react": "^0.408.0",
    "motion": "^12.23.3",
    "next": "^14.2.30",
    "postcss": "^8.4.39",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.52.1",
    "tailwindcss": "^3.4.6",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "turbo": "^1.13.0",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.8.2"
}