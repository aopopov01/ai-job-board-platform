    "@testing-library/user-event": "^14.5.1",
    "@tanstack/react-query": "^5.8.4",
    "@types/node": "^20.8.10",
    "@vitejs/plugin-react": "^4.1.1",
    "axe-core": "^4.8.2",
    "jsdom": "^23.0.1",
    "msw": "^2.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vitest": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "typescript": "^5.2.2"
  },
  "exports": {
    ".": {
      "import": "./index.ts",
      "require": "./index.ts",
      "types": "./index.ts"
    },
    "./setup": {
      "import": "./setup.ts",
      "require": "./setup.ts",
      "types": "./setup.ts"
    },
    "./utils": {
      "import": "./utils/test-utils.ts",
      "require": "./utils/test-utils.ts",
      "types": "./utils/test-utils.ts"
