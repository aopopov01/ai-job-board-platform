{
  "name": "@job-board/testing",
  "version": "1.0.0",
  "description": "Testing utilities and setup for job board platform",
  "main": "index.ts",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "type-check": "tsc --noEmit",
    "build": "echo 'Testing package does not need building'"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
