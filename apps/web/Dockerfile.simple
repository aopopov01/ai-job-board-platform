FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json ./
COPY package-lock.json* ./

# Install dependencies
RUN npm install

# Copy all files
COPY . .

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3000
ENV SKIP_ENV_VALIDATION=true

# Start the application bypassing TypeScript checks
CMD ["npx", "next", "dev", "--hostname", "0.0.0.0", "--port", "3000"]